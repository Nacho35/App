<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('partials/header') %>
    <title>Libro</title>
</head>

<body>
  <%- include ('partials/navigation')%>
    <div class="container-fluid mt-4 min-vh-100">
      <div class="row ">
        <% if (books.length> 0) { %> <% books.forEach(function(book) { %>
            <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 mb-4">
              <div class="card text-white bg-dark mb-4 text-center h-100">
                <div class="card-header">
                  <h5 class="card-title">
                    <%= book.name %>
                  </h5>
                  <div class="card-body">
                    <img class="card-img-top rounded" src="<%= book.url %>" />
                    <p class="card-text mt-3 text-start lh-base">
                      <%= book.description %>
                    </p>
                    <h5 class="card-title my-3">AÃ±o:
                      <%= book.year %>
                    </h5>
                    <h5 class="card-title my-3">Genero:
                      <%= book.gender %>
                    </h5>
                    <h5 class="card-title my-3">Author:
                      <%= book.author %>
                    </h5>
                    <a href="/api/delete/<%= book.id %>"
                      class="btn btn-outline-danger btn-md-block mt-3 w-50">Borrar</a>
                  </div>
                </div>
              </div>
            </div>
            <%})%>
              <%} else {%>
                <div class="card card-body text-center" style="padding: 21%">
                  <p>
                    No Hay Libros Todavia.
                    <a href="/api/books/new-entry">Agregar Un Libro</a>
                  </p>
                </div>
                <%}%>
      </div>
    </div>
    <%- include ('partials/footer')%>
</body>

</html>